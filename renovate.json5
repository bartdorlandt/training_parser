{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "packageNames": ["*"],
      "matchDepTypes": ["dev"],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "dev dependency updates"
    },
    {
      "updateTypes": ["patch", "minor", "pin", "digest"],
      "automerge": true,
      "groupName": "Small updates"
    }
  ]
}
