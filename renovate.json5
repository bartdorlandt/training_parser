{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "automerge": true,
      "groupName": "poetry-minor",
      "matchDepTypes": ["dependencies", "dev"],
      "matchManagers": ["poetry"],
      "matchUpdateTypes": [
        "bump",
        "digest",
        "lockFileMaintenance",
        "minor",
        "patch",
        "pin",
        "rollback"
      ],
    },
    {
      "automerge": true,
      "groupName": "poetry-major",
      "matchDepTypes": ["dev", "types"],
      "matchManagers": ["poetry"],
      "matchUpdateTypes": ["major"],
    },
  ]
}
